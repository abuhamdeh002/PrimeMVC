@model Login

@{
    ViewData["Title"] = "Index";
}

<section class="vh-100">
    <div class="container-fluid h-custom ">
        <div class=" justify-content-center align-items-center ">
            <div class="col-md-9 col-lg-6 col-xl-5">
            </div>
            <div class="mt-5 col-md-8 col-lg-6 col-xl-4">
                <form method="post" >
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Email" class="form-control form-control-lg" />
                        <label asp-for="Email" class="ms-2"></label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input asp-for = "Password" class="form-control form-control-lg" />
                        <label asp-for="Password" class="ms-2"></label>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                            <label class="form-check-label">
                                Remember me
                            </label>
                        </div>
                        <a href="#!" class="text-body">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary form-control"asp-controller="Book" asp-action="Index">Login</button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account yet ? <a href="SignUp"
                                                           class="link-danger">Register Now !</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="d-flex flex-column mt-2 flex-md-row text-center justify-content-between  py-2 px-2 px-xl-3 bg-primary">
        
            <div>
            <b>
                @if (ViewBag.Quote != null)
                {
                    <p>@ViewBag.Quote</p>
                }
            </b>
            </div>
        

    </div>
</section>

