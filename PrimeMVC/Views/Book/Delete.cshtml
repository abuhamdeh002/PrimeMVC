@model Book

<form method="post" asp-action="DeleteBook">
    <input asp-for="BookID" hidden />

    <div class="border p-3 mt-4">
        <div>
            <h2 class="text-primary">Delete Book</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="ISBN"></label>
            <input asp-for="ISBN" Disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />

        </div>

        <div class="mb-3">
            <label asp-for="PublicationYear"></label>
            <input asp-for="PublicationYear" Disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Genre"></label>
            <input asp-for="Genre" Disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Book" asp-action="index" class="btn btn-secondary" style="width:150px">
            <i class="bi bi-arrow-90deg-left"></i>  Back To List
        </a>
    </div>
</form>

@section Scripts {
    @{
        <parial name="_ValidationScriptsPartial" />
    }
}